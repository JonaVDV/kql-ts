{
	"name": "kql-ts",
	"version": "0.2.0",
	"module": "index.ts",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=22.0.0",
		"bun": ">=1.1.42"
	},
	"scripts": {
		"format": "bun --filter '*' format",
		"build": "bun --bun --filter '*' build",
		"deps:check": "bunx sherif@latest",
		"deps:fix": "bunx sherif@latest -f",
		"clean": "git clean -xdf node_modules",
		"clean:workspaces": "bun --filter '*' clean",
		"lint": "bun --filter '*' lint",
		"sites:dev": "bun --filter './sites/*' dev",
		"packages:dev": "bun --filter './packages/*' dev",
		"changeset:version": "changeset version",
		"changeset:release": "changeset publish",
		"prepare": "husky"
	},
	"packageManager": "bun@1.1.42",
	"workspaces": [
		"packages/*",
		"tooling/*",
		"sites/*"
	],
	"devDependencies": {
		"@changesets/cli": "^2.27.12",
		"@kql-ts/prettier": "workspace:*",
		"@types/bun": "latest",
		"prettier": "^3.4.2",
		"husky": "^9.1.7"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"prettier": "@kql-ts/prettier"
}
